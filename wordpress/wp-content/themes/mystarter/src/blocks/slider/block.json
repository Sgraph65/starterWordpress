{
	"apiVersion": 2,
	"name": "mystarter/slider",
	"title": "Slider",
	"description": "Un carrousel d'images avec navigation.",
	"category": "media",
	"icon": "slides",
	"supports": {
		"align": ["wide", "full"],
		"html": false,
		"spacing": {
			"margin": true
		}
	},
	"attributes": {
		"slides": {
			"type": "array",
			"default": []
		},
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"interval": {
			"type": "number",
			"default": 5000
		}
	},
	"example": {
		"attributes": {
			"slides": [
				{
					"url": "https://via.placeholder.com/1200x600",
					"alt": "Slide 1"
				},
				{
					"url": "https://via.placeholder.com/1200x600",
					"alt": "Slide 2"
				}
			]
		}
	}
}
