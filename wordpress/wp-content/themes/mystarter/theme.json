{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"duotone": [],
			"defaultPalette": false,
			"palette": [
				{
					"slug": "background",
					"name": "Fond",
					"color": "#ffffff"
				},
				{
					"slug": "text",
					"name": "Texte",
					"color": "#1f2933"
				},
				{
					"slug": "muted",
					"name": "Gris doux",
					"color": "#9aa5b1"
				},
				{
					"slug": "accent",
					"name": "Accent",
					"color": "#ff715b"
				},
				{
					"slug": "accent-dark",
					"name": "Accent foncé",
					"color": "#d45b47"
				}
			]
		},
		"layout": {
			"contentSize": "720px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": ["px", "em", "rem", "vh", "vw"],
			"spacingScale": {
				"steps": 8,
				"mediumStep": 1,
				"unit": "rem"
			}
		},
		"typography": {
			"defaultFontSizes": false,
			"fontFamilies": [
				{
					"slug": "primary",
					"name": "Inter",
					"fontFamily": "\"Inter\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", sans-serif"
				},
				{
					"slug": "secondary",
					"name": "DM Serif Display",
					"fontFamily": "\"DM Serif Display\", Georgia, serif"
				}
			],
			"fontSizes": [
				{
					"slug": "xs",
					"name": "XS",
					"size": "0.75rem"
				},
				{
					"slug": "s",
					"name": "S",
					"size": "0.875rem"
				},
				{
					"slug": "base",
					"name": "Base",
					"size": "1rem"
				},
				{
					"slug": "l",
					"name": "Large",
					"size": "1.25rem"
				},
				{
					"slug": "xl",
					"name": "XL",
					"size": "1.5rem"
				},
				{
					"slug": "xxl",
					"name": "XXL",
					"size": "2.5rem"
				}
			]
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"dropCap": false
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--primary)",
			"lineHeight": "1.6"
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontWeight": "600"
				},
				"border": {
					"radius": "999px"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--accent)"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--text)"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "mystarter-landing",
			"title": "Page d’atterrissage",
			"postTypes": ["page"]
		}
	]
}
