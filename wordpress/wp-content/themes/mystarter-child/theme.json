{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "client-primary",
					"name": "Primaire",
					"color": "#2f4cff"
				},
				{
					"slug": "client-secondary",
					"name": "Secondaire",
					"color": "#9aa5ff"
				},
				{
					"slug": "client-accent",
					"name": "Accent",
					"color": "#ff715b"
				},
				{
					"slug": "client-background",
					"name": "Fond clair",
					"color": "#f5f7ff"
				},
				{
					"slug": "client-text",
					"name": "Texte",
					"color": "#1f2333"
				}
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--client-background)",
			"text": "var(--wp--preset--color--client-text)"
		},
		"elements": {
			"button": {
				"color": {
					"text": "#ffffff",
					"background": "var(--wp--preset--color--client-primary)"
				},
				"border": {
					"radius": "999px"
				}
			}
		}
	}
}
